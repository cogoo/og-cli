{
  "name": "og",
  "version": "0.0.1",
  "description": "og CLI",
  "private": true,
  "bin": {
    "og": "bin/og"
  },
  "scripts": {
    "format": "prettier --write **/*.{js,ts,tsx,json}",
    "lint": "tslint -p .",
    "compile": "tsc -p .",
    "build": "yarn format && yarn lint && yarn compile",
    "test": "jest",
    "watch": "jest --watch",
    "snapupdate": "jest --updateSnapshot",
    "coverage": "jest --coverage",
    "check": "gts check",
    "clean": "gts clean",
    "fix": "gts fix",
    "prepare": "yarn compile",
    "pretest": "yarn compile",
    "posttest": "yarn check"
  },
  "files": [
    "tsconfig.json",
    "tslint.json",
    "build",
    "LICENSE",
    "readme.md",
    "docs",
    "bin"
  ],
  "license": "MIT",
  "dependencies": {
    "degit": "2.8.4",
    "git-cz": "4.9.0",
    "gluegun": "^2.1.0",
    "ts-node": "^10.9.1",
    "pkg-dir": "7.0.0",
    "typescript": "4.3.5"
  },
  "devDependencies": {
    "@types/jest": "^23.3.10",
    "@types/node": "^18.7.8",
    "@types/prettier": "^2.7.1",
    "gts": "^3.1.0",
    "jest": "^23.6.0",
    "prettier": "^2.8.1",
    "ts-jest": "^23.10.5",
    "tslint": "^5.12.0",
    "tslint-config-prettier": "^1.17.0",
    "tslint-config-standard": "^9.0.0",
    "typescript": "~4.3.5"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node"
  },
  "prettier": {
    "semi": false,
    "singleQuote": true
  }
}
